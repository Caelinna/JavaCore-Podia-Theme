{
    "manifest_version": 3,
    "name": "JavaCore Podia Theme",
    "version": "1.0",
    "description": "Inject basic and dark mode CSS into JirAWS website.",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.jiraws.com/view/courses/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    }
}